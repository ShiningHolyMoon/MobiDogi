<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="?attr/actionBarSize">

  <RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mobidogi.MainActivity">

  <ImageButton
    android:contentDescription="@string/title_mitenkoiraoppii"
    android:id="@+id/simpleImageViewMitenkoiraoppiipaketti"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:scaleType="fitXY"
    android:src="@drawable/mitenkoiraoppiipaketti_kuvsa" />

    <TextView
      android:id="@+id/textView1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:paddingTop="80dp"
      android:text="@string/title_mitenkoiraoppii"
      android:textSize="@dimen/pictureTitles"
      android:textColor="@color/colorTitles2"
      app:fontFamily="@font/cinzel_bold"
      android:textAppearance="?android:attr/textAppearanceSmall" />

  <ImageButton
    android:contentDescription="@string/title_lenkkeily"
    android:id="@+id/simpleImageViewLenkkeily"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_below="@+id/simpleImageViewMitenkoiraoppiipaketti"
    android:layout_marginTop="10dp"
    android:scaleType="fitXY"
    android:src="@drawable/lenkkeily" />

    <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:paddingTop="290dp"
      android:text="@string/title_lenkkeily"
      android:textSize="@dimen/pictureTitles"
      android:textColor="@color/colorTitles2"
      app:fontFamily="@font/cinzel_bold"
      android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
      android:contentDescription="@string/title_luoksetulo"
      android:id="@+id/simpleImageViewLuoksetulo"
      android:layout_width="fill_parent"
      android:layout_height="200dp"
      android:layout_below="@+id/simpleImageViewLenkkeily"
      android:layout_marginTop="10dp"
      android:scaleType="fitXY"
      android:src="@drawable/luoksetulo" />

    <TextView
      android:id="@+id/textView3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:paddingTop="500dp"
      android:text="@string/title_luoksetulo"
      android:textSize="@dimen/pictureTitles"
      android:textColor="@color/colorTitles2"
      app:fontFamily="@font/cinzel_bold"
      android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
      android:contentDescription="@string/title_hoitotoimenpiteet"
      android:id="@+id/simpleImageViewHoitotoimenpiteet"
      android:layout_width="fill_parent"
      android:layout_height="200dp"
      android:layout_below="@+id/simpleImageViewLuoksetulo"
      android:layout_marginTop="10dp"
      android:scaleType="fitXY"
      android:src="@drawable/hoitotoimenpiteet" />

    <ImageButton
      android:contentDescription="@string/title_yksinolo"
      android:id="@+id/simpleImageViewYksinolo"
      android:layout_width="fill_parent"
      android:layout_height="200dp"
      android:layout_below="@+id/simpleImageViewHoitotoimenpiteet"
      android:layout_marginTop="10dp"
      android:scaleType="fitXY"
      android:src="@drawable/yksinolo" />
</RelativeLayout>

  <android.support.design.widget.BottomNavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:menu="@menu/bottom_nav_menu" />
</android.support.constraint.ConstraintLayout>
